{
  "name": "hexo-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": "w-xuefeng",
  "description": "Hexo 桌面版客户端",
  "scripts": {
    "build-preloads": "rollup -c --environment ENTRY:preloads",
    "build-scripts": "rollup -c --environment ENTRY:scripts",
    "dev-prepare": "yarn clean-dev && yarn build-preloads && yarn build-scripts",
    "build-prepare": "yarn clean && yarn build-preloads && yarn build-scripts && vite build",
    "dev": "yarn dev-prepare && vite",
    "clean": "rimraf dist dist-electron release",
    "clean-dev": "rimraf dist dist-electron",
    "build": "yarn build-prepare && electron-builder -wm",
    "build:w": "yarn build-prepare && electron-builder -w",
    "build:m": "yarn build-prepare && electron-builder -m",
    "preview": "vite preview",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write ./"
  },
  "dependencies": {
    "@arco-design/web-vue": "^2.56.0",
    "electron-log": "^5.1.7",
    "electron-store": "^10.0.0",
    "hexo": "^7.3.0",
    "hexo-cli": "^4.3.2",
    "moment": "^2.30.1",
    "npm-keyword": "^8.0.0",
    "pinia": "^2.2.2",
    "vue": "^3.5.3",
    "vue-i18n": "9",
    "vue-router": "4.4.3",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^9",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5",
    "eslint": "^9.8.0",
    "eslint-plugin-vue": "^9.27.0",
    "glob": "^11.0.0",
    "less": "^4.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.20.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.18.0",
    "unplugin-auto-import": "^0.18.2",
    "vite": "^5.4.3",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.1.6"
  },
  "main": "dist-electron/main.js",
  "packageManager": "yarn@4.4.1"
}
